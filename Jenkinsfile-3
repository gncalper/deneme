pipeline {
    agent any

    stages {
        stage('Generate config.json') {
            steps {
                withCredentials([
                    string(credentialsId: 'db-user', variable: 'DB_USER'),
                    string(credentialsId: 'db-password', variable: 'DB_PASSWORD')
                ]) {
                    sh '''
                    envsubst < cred.json > config.json
                    '''
                }
            }
        }
    }
}
